<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-6">

    <form action="/create" method="post" class="max-w-md mx-auto bg-white p-5 shadow rounded">
        <div class="space-y-3">
            <input type="text" placeholder="Title" name="title" class="w-full border p-2 rounded">

            <input type="text" placeholder="Details" name="details" class="w-full border p-2 rounded">

            <input type="submit" value="Create Task"
                class="bg-blue-600 text-white px-4 py-2 rounded cursor-pointer hover:bg-blue-700">
        </div>

        <div class="mt-6">
            <h2 class="text-lg font-semibold mb-2">All Tasks</h2>

            <% if (files.length> 0){ %>
                <% files.forEach(function(val){ %>

                    <!-- Sample task -->
                    <div class="bg-gray-50 p-3 rounded border">
                        <p class="font-medium"><%= val %></p>
                        

                        <div class="mt-2 space-x-3 text-sm">
                            <a href="/files/<%= val %>" class="text-blue-600 hover:underline">Read More</a>
                            <a href="/edit/<%= val %>" class="text-green-600 hover:underline">Edit</a>
                        </div>
                    </div>

                    <% }) %>
                        <% }else{ %>
                            <h2 class="text-lg font-semibold mb-2">NO Tasks available</h2>

                            <% } %>



        </div>
    </form>

</body>

</html>